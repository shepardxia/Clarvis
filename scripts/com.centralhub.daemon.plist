<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.centralhub.daemon</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/env</string>
        <string>uv</string>
        <string>run</string>
        <string>--directory</string>
        <string>PROJECT_DIR_PLACEHOLDER</string>
        <string>python</string>
        <string>-m</string>
        <string>src.daemon</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>PROJECT_DIR_PLACEHOLDER/logs/daemon.out.log</string>
    
    <key>StandardErrorPath</key>
    <string>PROJECT_DIR_PLACEHOLDER/logs/daemon.err.log</string>
    
    <key>WorkingDirectory</key>
    <string>PROJECT_DIR_PLACEHOLDER</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/Users/shepardxia/.local/bin:/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
